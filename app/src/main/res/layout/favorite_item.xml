<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/input_edittext_login"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fotoFilm"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/windah_batubara"
        android:background="@drawable/input_edittext_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txtTitleFilm"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Spiderman: No Why Home"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/fotoFilm"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Duration  : "
        app:layout_constraintTop_toBottomOf="@id/txtTitleFilm"
        app:layout_constraintStart_toStartOf="@id/txtTitleFilm"
        />

    <TextView
        android:id="@+id/txtMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="900"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitleFilm"
        app:layout_constraintLeft_toRightOf="@id/txtDuration"
        />

    <TextView
        android:id="@+id/minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minute"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitleFilm"
        app:layout_constraintLeft_toRightOf="@id/txtMinute"
        />

    <ImageView
        android:id="@+id/btnFavorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/bookmark_regular"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/txtMinute"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>