<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".DetailFilmActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow_left_solid"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/filmTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Film Name"
                android:fontFamily="@font/roboto_black"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/filmCover"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/windah_batubara"
                android:scaleType="centerCrop"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/profile_circle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filmTitle"
                />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration Film"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_black"
                app:layout_constraintTop_toBottomOf="@id/filmCover"
                app:layout_constraintStart_toStartOf="@id/filmCover"
                />

            <TextView
                android:id="@+id/txtDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999 minute"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/duration"
                app:layout_constraintStart_toStartOf="@id/duration"
                />

            <TextView
                android:id="@+id/synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synopsis Film"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_black"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/txtDuration"
                app:layout_constraintStart_toStartOf="@id/duration"
                />

            <TextView
                android:id="@+id/txtSynopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/synopsis"
                app:layout_constraintStart_toStartOf="@id/synopsis"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>