<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellowTransparent"
    tools:context=".auth.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wave_background"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".2"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gd75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".75"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_black"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_edittext_login"
            android:padding="16dp"
            android:fontFamily="@font/roboto_black"
            android:hint="Username"
            android:textColor="@color/black"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/gd2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_edittext_login"
            android:padding="16dp"
            android:hint="Password"
            android:fontFamily="@font/roboto_black"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edtUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_edittext_login"
            android:padding="16dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/black"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edtPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegisterUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register User"
            android:fontFamily="@font/roboto_black"
            android:textSize="16sp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/btn_login"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/gd75"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegisterAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Admin"
            android:fontFamily="@font/roboto_black"
            android:textSize="16sp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_login"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/gd75"
            />

        <TextView
            android:id="@+id/alreadyHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have an Account?"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnRegisterAdmin"
            app:layout_constraintStart_toStartOf="@id/btnRegisterAdmin"
            />

        <TextView
            android:id="@+id/txtSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/blue"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/alreadyHaveAccount"
            app:layout_constraintBottom_toBottomOf="@id/alreadyHaveAccount"
            app:layout_constraintStart_toEndOf="@id/alreadyHaveAccount"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>