<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/yellowTransparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFilm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:background="@drawable/wave_background"
            >

            <TextView
                android:id="@+id/txtAddFilm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD FILM"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_black"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/txtFilmTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Film Title"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/txtAddFilm"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtFilmTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_edittext_login"
                android:hint="Film Title"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/txtFilmTitle"
                />

            <TextView
                android:id="@+id/txtDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/edtFilmTitle"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_edittext_login"
                android:hint="Menit"
                android:inputType="number"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/txtDuration"
                />

            <TextView
                android:id="@+id/txtCover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Film Cover"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/edtDuration"
                app:layout_constraintStart_toStartOf="@id/edtSynopsis"
                />

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                android:src="@android:drawable/ic_menu_camera"
                app:layout_constraintTop_toBottomOf="@id/txtCover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synopsis"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/imgPreview"
                app:layout_constraintStart_toStartOf="@id/edtSynopsis"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtSynopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_edittext_login"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="8"
                android:scrollbars="vertical"
                android:gravity="top"
                android:hint="Synopsis"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/synopsis"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Film"
                android:background="@drawable/btn_login"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/edtSynopsis"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>